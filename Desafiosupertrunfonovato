#include <stdio.h>

int main (){
    //Declaração das váriaveis das duas carta
    char estado1, estado2; //A letra inical do estado
    char codigo1[4], codigo2[4]; //A letra do estado mais o número do codigo exemplo [A01]
    char cidade1[10], cidade2[10]; //Nome da Cidade
    int populacao1, populacao2; //Número total de habitantes
    float area1, area2; //Tamanho da cidade em km²
    float pib1, pib2; //Produto Interno Bruto da cidade
    int pontosturisticos1, pontosturisticos2; //Números de atrações turísticas
    //Início da primeira carta
    printf ("CARTA 1 \n");
 
    printf ("Digite o estado com a inical (A-H): ");
    scanf ("%c", &estado1); //O scanf("%c", &estado1) ele lê o caractere do estado

    printf ("Digite o codigo da carta (exemplo A01, B02): "); 
    scanf ("%s", &codigo1); //O scanf("%s", &codigo1) ele lê o caractere do codigo

    printf ("digite o nome da cidade: "); 
    scanf ("%s", &cidade1); //O scanf("%s", &cidade1) ele lê o caractere da cidade

    printf ("digite a populacao: "); 
    scanf ("%d", &populacao1); //O scanf("%d", &populacao1) ele lê o caractere da população

    printf ("digite a area da cidade (km²): "); 
    scanf ("%f", &area1); //O scanf("%f", &area1) ele lê o caractere da area da cidade

    printf ("digite o pib da cidade: "); 
    scanf ("%f", &pib1); //O scanf("%f", &pib1) ele lê o caractere do PIB

    printf ("digite o numero de pontosturisticos: "); 
    scanf ("%d", &pontosturisticos1); //O scanf("%d", &pontosturisticos1) ele lê o caractere dos pontos turísticos

    //Início da segunda carta
    printf ("CARTA 2 \n");
 
    printf ("digite o estado: ");
    scanf (" %c", &estado2); //É importante o espaço antes de %c para ignorar características de espaço

    printf ("digite o codigo da carta (exemplo A01, B02): ");
    scanf ("%s", &codigo2); //O scanf("%s", &codigo2) ele lê o caractere do codigo da carta

    printf ("digite o nome da cidade: ");
    scanf ("%s", &cidade2); //O scanf("%s", &cidade2) ele lê o caractere da cidade

    printf ("digite a populacao: ");
    scanf ("%d", &populacao2); //O scanf("%d", &populacao2) ele lê o caractere do estado

    printf ("digite a area da cidade (km²): ");
    scanf ("%f", &area2); //O scanf("%f", &area2) ele lê o caractere da area da cidade

    printf ("digite o pib da cidade: ");
    scanf ("%f", &pib2); //O scanf("%f", &pib2) ele lê o caractere do PIB

    printf ("digite o numero de pontosturisticos: ");
    scanf ("%d", &pontosturisticos2); //O scanf("%d", &pontosturisticos2) ele lê o caractere dos pontos turísticos
    
    printf("\nCarta 1:\n");
    printf("Estado: %c\n", estado1);
    printf("Código: %s\n", codigo1);
    printf("Cidade: %s\n", cidade1);
    printf("População: %d\n", populacao1);
    printf("Área: %f\n", area1);
    printf("PIB: %f\n", pib1);
    printf("Pontos Turísticos: %d\n\n", pontosturisticos1);

    printf("Carta 2:\n");
    printf("Estado: %c\n", estado2);
    printf("Código: %s\n", codigo2);
    printf("Cidade: %s\n", cidade2);
    printf("População: %d\n", populacao2);
    printf("Área: %f\n", area2);
    printf("PIB: %f\n", pib2);
    printf("Pontos Turísticos: %d", pontosturisticos2);




    
    return 0;
    
    

}
